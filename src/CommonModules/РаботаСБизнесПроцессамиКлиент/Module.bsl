	ЗаголовокФормыВыбора = НСтр("ru = 'Выбор шаблона наименования'");
	ЗаголовокФормыСоздания = НСтр("ru = 'Шаблон наименования'");
	ИмяОбработчика = "НаименованиеНачалоВыбораПродолжение";
	
