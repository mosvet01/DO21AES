	ВерсияОбъект.ДополнительныеСвойства.Вставить("ЗаписьРезультатаРаспознавания", Истина);
	ВерсияОбъект.Записать();
	РазблокироватьДанныеДляРедактирования(ВерсияСсылка);
		
