Функция СоздатьДокументДОПоВходящемуЭДО(ДокументЭДО) Экспорт
	
	СтруктураВозврата = Новый Структура;
	СтруктураВозврата.Вставить("КоличествоКСозданию", 1);
	СтруктураВозврата.Вставить("КоличествоСоздано", 0);
	СтруктураВозврата.Вставить("КоличествоСозданоСОшибками", 0);
	СтруктураВозврата.Вставить("СозданныеДокументы", Новый Соответствие);
	СтруктураВозврата.Вставить("Ошибки", Новый Массив);
	
	Запрос = Новый Запрос;
	Запрос.Текст =
		"ВЫБРАТЬ
		|	СообщениеЭДО.Ссылка,
		|	СообщениеЭДО.Состояние
		|ИЗ
		|	Документ.СообщениеЭДО КАК СообщениеЭДО
		|ГДЕ
		|	СообщениеЭДО.ЭлектронныйДокумент = &ДокументЭДО
		|	И СообщениеЭДО.ТипЭлементаРегламента = &ИнформацияОтправителя";
	Запрос.УстановитьПараметр("ДокументЭДО", ДокументЭДО);
	Запрос.УстановитьПараметр("ИнформацияОтправителя", Перечисления.ТипыЭлементовРегламентаЭДО.ИнформацияОтправителя);
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	Если Не Выборка.Следующий() Тогда
		
		ОписаниеОшибки = НСтр("ru = 'Не найдено сообщение ЭДО информации отправителя документа'");
		
		Ошибка = Новый Структура;
		Ошибка.Вставить("Описание", ОписаниеОшибки);
		Ошибка.Вставить("ПредметОшибки", ДокументЭДО);
		Ошибка.Вставить("Критическая", Истина);
		
		СтруктураВозврата.Ошибки.Добавить(Ошибка);
		
		Возврат СтруктураВозврата;
		
	КонецЕсли;
	
	Если Выборка.Состояние = Перечисления.СостоянияДокументовЭДО.Аннулирован
		Или Выборка.Состояние = Перечисления.СостоянияДокументовЭДО.ЗакрытПринудительно
		Или Выборка.Состояние = Перечисления.СостоянияДокументовЭДО.ОбменЗавершен
		Или Выборка.Состояние = Перечисления.СостоянияДокументовЭДО.ОбменЗавершенСИсправлением
		Или Выборка.Состояние = Перечисления.СостоянияДокументовЭДО.ТребуетсяИсправлениеОшибкиПередачи Тогда
		
		ОписаниеОшибки = СтрШаблон(НСтр("ru = 'Документ находится в состоянии %1, создание возможно только из состояния ""Требует утверждения""'"),
			Выборка.Состояние);
		
		Ошибка = Новый Структура;
		Ошибка.Вставить("Описание", ОписаниеОшибки);
		Ошибка.Вставить("ПредметОшибки", ДокументЭДО);
		Ошибка.Вставить("Критическая", Истина);
		
		СтруктураВозврата.Ошибки.Добавить(Ошибка);
		
		Возврат СтруктураВозврата;
		
	КонецЕсли;
	
	ПараметрыСозданияДОПоДаннымЭД = Новый Структура;
	ПараметрыСозданияДОПоДаннымЭД.Вставить("ВыдаватьСообщенияПоОшибкам", Истина);
	СообщенияКПриему = ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(Выборка.Ссылка);
	ПараметрыСозданияДОПоДаннымЭД.Вставить("ЭДДляОбработки", СообщенияКПриему);
	
	РезультатСоздания =
		ОбменСКонтрагентамиДОСервер.СформироватьДокументыДОНаОснованииВходящихЭД(ПараметрыСозданияДОПоДаннымЭД);
	
	ЗаполнитьЗначенияСвойств(СтруктураВозврата, РезультатСоздания);
	
	Если РезультатСоздания.КоличествоСоздано > 0 Тогда
		ДокументыЭДО = ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(ДокументЭДО);
		СозданныеДокументы = ОбменСКонтрагентамиДОСлужебный.ДокументыДОЭлектронныхДокументов(ДокументыЭДО);
		
		СтруктураВозврата.СозданныеДокументы = СозданныеДокументы;
	КонецЕсли;
	
	Возврат СтруктураВозврата;
	
