////////////////////////////////////////////////////////////////////////////////
// Процедуры и функции получения сведений об организации.

// Функция возвращает сведения об организации.
//
// Параметры:
//   Организация       - СправочникСсылка.Организации - ссылка на элемент справочника "Организации".
//   ДатаЗначения      - Дата - дата, на которую нужно получить сведения.
//   СписокПоказателей - СписокЗначений - список показателей, значения которых нужно вернуть.
//  
// Возвращаемое значение:
//   Структура - структура с ключами из списка показателей и возвращаемыми значениями.
//
// Пример:
//	 ОргСведения = Новый Структура;
//   Для Каждого Показатель Из СписокПоказателей Цикл
//  	 ИмяПоказателя = Показатель.Представление;
//       Если Имяпоказателя = "КодНО" Тогда
//      	 Значение = Организация.КодНалоговогоОргана;
//       ИначеЕсли ИмяПоказателя = "ОГРН" Тогда
//      	 Значение = Организация.ОГРН;
//       Иначе
//      	 Значение = "";
//       КонецЕсли;
//       ОргСведения.Вставить(ИмяПоказателя, Значение);
//   КонецЦикла;
//   Возврат ОргСведения;
//
Функция ПолучитьСведенияОбОрганизации(Знач Организация, Знач ДатаЗначения = Неопределено, Знач СписокПоказателей = Неопределено) Экспорт
	
	ДанныеБанковскогоСчета = Неопределено;

	// Структура, в которой будут возвращаться найденные значения
	СведенияОбОрганизации = Новый Структура;
	
	Если ДатаЗначения = Неопределено Тогда
		ДатаЗначения = ТекущаяДатаСеанса();
	КонецЕсли;
	ДатаЗначения = КонецДня(ДатаЗначения);
	
	ПустаяДата = '00010101000000';
	ПустойАдрес = ",,,,,,,,,";
	
	// проверить что не осталось Организаций
	ОрганизацияОбъект = Организация.ПолучитьОбъект();
	
	Кэш = Новый Структура;
	Кэш.Вставить("Организация", ОрганизацияОбъект);
	Кэш.Вставить("ДатаЗначения", ДатаЗначения);
	
	// вроде у нас не поддверживаются такие сценарии?
	ПБОЮЛ = ОрганизацияОбъект.ЮрФизЛицо = Перечисления.ЮрФизЛицо.ФизЛицо;
	Кэш.Вставить("ПБОЮЛ", ПБОЮЛ);
	
	РоссийскийАдрес = Новый Соответствие;
	РоссийскийАдрес.Вставить("Индекс",          "");
	РоссийскийАдрес.Вставить("Регион",          "");
	РоссийскийАдрес.Вставить("КодРегиона",      "");
	РоссийскийАдрес.Вставить("Район",           "");
	РоссийскийАдрес.Вставить("Город",           "");
	РоссийскийАдрес.Вставить("НаселенныйПункт", "");
	РоссийскийАдрес.Вставить("Улица",           "");
	РоссийскийАдрес.Вставить("Дом",             "");
	РоссийскийАдрес.Вставить("Корпус",          "");
	РоссийскийАдрес.Вставить("Квартира",        "");
	
	Если СписокПоказателей = Неопределено Тогда
		СписокПоказателей = ВсеПоказателиСведенийОбОрганизации();
	КонецЕсли;
	
	СписокПоказателейЭтоМассив = (ТипЗнч(СписокПоказателей) = Тип("Массив"));
	
	// Дальше есть чтение реквизитов от ссылки, чтобы данные получались из объектного кэша.
	// Вызов получения этих свеедний будет происходить редко.
	
	Для Каждого Показатель Из СписокПоказателей Цикл
		
		Значение = ""; // значение показателя по умолчанию
		
		ИмяПоказателя = ?(СписокПоказателейЭтоМассив, Показатель, Показатель.Представление);
		
		#Область ОбщиеСведения
			
		Если Имяпоказателя = "КодНО"
			Или Имяпоказателя = "КодНалоговогоОргана" Тогда
			
			// данный реквизит заполняется из регистрации в налоговом органе организации
			Если ЗначениеЗаполнено(ОрганизацияОбъект.РегистрацияВНалоговомОргане) Тогда
				Значение = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ОрганизацияОбъект.РегистрацияВНалоговомОргане, "Код");
			КонецЕсли;
			
			// если заполнить не удалось
			Если Не ЗначениеЗаполнено(Значение) Тогда
				Значение = Организация.КодНалоговогоОргана;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "КодОрганаПФР" Тогда
			
			Значение = Организация.КодОрганаПФР;
			
		ИначеЕсли ИмяПоказателя	 = "РегНомПФР" Тогда
			
			Значение = Организация.РегистрационныйНомерПФР;
			
		ИначеЕсли ИмяПоказателя = "КодОрганаФСГС" Тогда
			
			Значение = Организация.КодОрганаФСГС;
			
		ИначеЕсли ИмяПоказателя = "ОГРН" Тогда
			
			Значение = Организация.ОГРН;
		
		ИначеЕсли ИмяПоказателя = "НаимЮЛСокр"  Тогда
			
			Значение = ОрганизацияОбъект.Наименование;
		
		ИначеЕсли ИмяПоказателя = "НаимЮЛПол" Тогда
			
			Значение = ОрганизацияОбъект.НаименованиеПолное;
			
		ИначеЕсли ИмяПоказателя = "ИННЮЛ" Тогда
			
			Значение = СокрЛП(ОрганизацияОбъект.ИНН);
			
		ИначеЕсли ИмяПоказателя = "КППЮЛ" Тогда
			
			Значение = СокрЛП(ОрганизацияОбъект.КПП);
			
		ИначеЕсли ИмяПоказателя = "ОГРН" Тогда
			
			Значение = СокрЛП(ОрганизацияОбъект.ОГРН);
			
		КонецЕсли;
		
		#КонецОбласти
		
		#Область КонтактыИАдресаЮЛ
		
		Если ИмяПоказателя = "ТелОрганизации" Тогда
			
			Результат = ПолучитьСУчетомКэша(Кэш, "ТелефонОрганизации");

			Если Результат <> Неопределено Тогда
				Значение = Результат.Представление;
			Иначе
				Значение = "";
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "ФаксОрганизации" Тогда
			
			Если ПБОЮЛ Тогда
				Значение = "";
			Иначе
				ИмяПредопределенного = Справочники.ВидыКонтактнойИнформации.ФаксОрганизации;
				Данные = Новый Структура("Тип, Вид", Перечисления.ТипыКонтактнойИнформации.Факс, ИмяПредопределенного);
				Результат = ОрганизацияОбъект.КонтактнаяИнформация.НайтиСтроки(Данные);
				Если Результат.Количество() > 0 Тогда
					Значение = Результат[0].Представление;
				Иначе
					Значение = "";
				КонецЕсли;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдресЭлПочтыИП" Тогда
			Результат = ПолучитьСУчетомКэша(Кэш, "EmailОрганизации");
			Если Результат = Неопределено Тогда
				Значение = "";
			Иначе
				Значение = Результат.Представление;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдресЭлектроннойПочтыОрганизации" Тогда
			
			Данные = Новый Структура("Тип, Вид", Перечисления.ТипыКонтактнойИнформации.АдресЭлектроннойПочты, Справочники.ВидыКонтактнойИнформации.EmailОрганизации);
	
			Результат = ОрганизацияОбъект.КонтактнаяИнформация.НайтиСтроки(Данные);
			
			Если Результат.Количество() > 0 Тогда
				Значение = Результат[0].Представление;
			Иначе
				Значение = "";
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрПочт" Тогда
			
			ИмяПредопределенного = Справочники.ВидыКонтактнойИнформации.ПочтовыйАдресОрганизации;
			Данные = Новый Структура("Тип, Вид", Перечисления.ТипыКонтактнойИнформации.Адрес, ИмяПредопределенного);
			Результат = ОрганизацияОбъект.КонтактнаяИнформация.НайтиСтроки(Данные);
			
			Если Результат.Количество() > 0 Тогда
				Значение = РегламентированнаяОтчетность.АдресВФормате9Запятых(Результат[0]);
			Иначе
				Значение = ПустойАдрес;
			КонецЕсли;
			Результат = Неопределено;
			
			Если ПустаяСтрока(Значение) Тогда
				Значение = ПустойАдрес;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрПочт_XML" Тогда
			
			Значение = АдресВXML(ОрганизацияОбъект.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ПочтовыйАдресОрганизации);
			
		ИначеЕсли ИмяПоказателя = "АдрПочт_JSON" Тогда
			
			Значение = АдресВJSON(ОрганизацияОбъект.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ПочтовыйАдресОрганизации);
		
		ИначеЕсли ИмяПоказателя = "АдрЮР" Тогда
			
			Результат = ПолучитьСУчетомКэша(Кэш, "ЮрАдресОрганизации");

			Если Результат <> Неопределено Тогда
				Значение = РегламентированнаяОтчетность.АдресВФормате9Запятых(Результат);
			Иначе
				Значение = ПустойАдрес;
			КонецЕсли;
			
			Если ПустаяСтрока(Значение) Тогда
				Значение = ПустойАдрес;
			КонецЕсли;
		ИначеЕсли ИмяПоказателя = "АдрЮР_XML" Тогда
			
			Значение = АдресВXML(ОрганизацияОбъект.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ЮрАдресОрганизации);
			
		ИначеЕсли ИмяПоказателя = "АдрЮР_JSON" Тогда
			
			Значение = АдресВJSON(ОрганизацияОбъект.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ЮрАдресОрганизации);
			
		ИначеЕсли ИмяПоказателя = "ПолныйАдрЮР" Тогда
			
			Результат = ПолучитьСУчетомКэша(Кэш, "ЮрАдресОрганизации");

			Если Результат <> Неопределено Тогда
				Значение = Результат.Представление;
			Иначе
				Значение = ПустойАдрес;
			КонецЕсли;
			
			Если ПустаяСтрока(Значение) Тогда
				Значение = ПустойАдрес;
			КонецЕсли;

		ИначеЕсли ИмяПоказателя = "АдрФакт" Тогда
			
			Результат = ПолучитьСУчетомКэша(Кэш, "ФактАдресОрганизации");
			Если Результат <> Неопределено Тогда
				Значение = РегламентированнаяОтчетность.АдресВФормате9Запятых(Результат);
			Иначе
				Значение = ПустойАдрес;
			КонецЕсли;
			
			Если ПустаяСтрока(Значение) Тогда
				Значение = ПустойАдрес;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрФакт_XML" Тогда
			
			Значение =
				АдресВXML(ОрганизацияОбъект.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ФактАдресОрганизации);
			
		ИначеЕсли ИмяПоказателя = "АдрФакт_JSON" Тогда
			
			Значение =
				АдресВJSON(ОрганизацияОбъект.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ФактАдресОрганизации);
			
			
		ИначеЕсли ИмяПоказателя = "ОргИндекс" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Индекс", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргСубъект" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Регион", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргКодСубъект" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "КодРегиона", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргРайон" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Район", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргГород" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Город", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргНПункт" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "НаселенныйПункт", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргУлица" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Улица", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргДом" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Дом", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргКорпус" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Корпус", РоссийскийАдрес);
			
		ИначеЕсли ИмяПоказателя = "ОргКвартира" Тогда
			
			Результат = ПолучитьЧастьАдресаСУчетомКэша(Кэш, "ЮрАдресОрганизации", "Квартира", РоссийскийАдрес);
			
		КонецЕсли;
		
		#КонецОбласти
		
	#Область КонтактыИАдресИП
		
		Если ИмяПоказателя = "АдрМЖ" Тогда
			
			Если ПБОЮЛ Тогда
				
				ФизическоеЛицо = ПолучитьСУчетомКэша(Кэш, "СведенияОбИндивидуальномПредпринимателе");
				Если ЗначениеЗаполнено(ФизическоеЛицо) Тогда
					Результат = ПолучитьСУчетомКэша(Кэш, "СведенияОбИндивидуальномПредпринимателеАдрес", ФизическоеЛицо);
					Если Результат <> Неопределено Тогда
						Значение = РегламентированнаяОтчетность.АдресВФормате9Запятых(Результат);
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
			
			Если Не ЗначениеЗаполнено(Значение) Тогда
				Значение = ПустойАдрес;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрМЖ_XML" Тогда
			Если ПБОЮЛ Тогда
				Значение = АдресВXML(Организация.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ЮрАдресОрганизации);
			Иначе
				Значение = Неопределено;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрМЖ_JSON" Тогда
			Если ПБОЮЛ Тогда
				Значение = АдресВJSON(Организация.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ЮрАдресОрганизации);
			Иначе
				Значение = Неопределено;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрПрописки" Тогда
			
			Если ПБОЮЛ Тогда
				
				ФизическоеЛицо = ПолучитьСУчетомКэша(Кэш, "СведенияОбИндивидуальномПредпринимателе");
				Если ЗначениеЗаполнено(ФизическоеЛицо) Тогда
					Результат = ПолучитьСУчетомКэша(Кэш, "СведенияОбИндивидуальномПредпринимателеАдресПрописки", ФизическоеЛицо);
					Если Результат <> Неопределено Тогда
						Значение = РегламентированнаяОтчетность.АдресВФормате9Запятых(Результат);
					КонецЕсли;
				КонецЕсли;
				
			КонецЕсли;
			
			Если Не ЗначениеЗаполнено(Значение) Тогда
				Значение = ПустойАдрес;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрПрописки_XML" Тогда
			Если ПБОЮЛ Тогда
				Значение = АдресВXML(Организация.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ЮрАдресОрганизации);
			Иначе
				Значение = Неопределено;
			КонецЕсли;
			
		ИначеЕсли ИмяПоказателя = "АдрПрописки_JSON" Тогда
			Если ПБОЮЛ Тогда
				Значение = АдресВJSON(Организация.КонтактнаяИнформация, Справочники.ВидыКонтактнойИнформации.ЮрАдресОрганизации);
			Иначе
				Значение = Неопределено;
			КонецЕсли;
			
		КонецЕсли;
		
		#КонецОбласти
		
		#Область БанковскийСчетОрганизации
		
		Если ИмяПоказателя = "БанкСчетНомер" Тогда
			
			Если ДанныеБанковскогоСчета = Неопределено Тогда
				ДанныеБанковскогоСчета =
					Справочники.БанковскиеСчета.ПолучитьРеквизитыБанковскогоСчетаОрганизации(Организация.ОсновнойБанковскийСчет);
			КонецЕсли;
			
			Значение = ДанныеБанковскогоСчета.НомерСчета;
			
		ИначеЕсли ИмяПоказателя = "БанкСчетНаимБанка" Тогда
			
			Если ДанныеБанковскогоСчета = Неопределено Тогда
				ДанныеБанковскогоСчета =
					Справочники.БанковскиеСчета.ПолучитьРеквизитыБанковскогоСчетаОрганизации(Организация.ОсновнойБанковскийСчет);
			КонецЕсли;
			
			Если ДанныеБанковскогоСчета.Банк <> Неопределено Тогда
				Значение = ДанныеБанковскогоСчета.НаименованиеБанка;
			Иначе
