			Значение = Результат[0];
		Иначе
			Значение = Результат[0][ПолеРезультата];
		КонецЕсли;
		
		Если ПреобразоватьВФорматАдреса Тогда
			Значение = РегламентированнаяОтчетность.АдресВФормате9Запятых(Значение);
