				СтрШаблон(НСтр("ru = 'Не удалось проверить готовность результата в сервисе распознавания.
				|Код состояния сервиса распознавания: %1'", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка()),
				КодСостояния);
		КонецЕсли;
	КонецЕсли;
	
	ТекстИсключения = "";
	НачалоРаспознавания = Неопределено;
	ЗавершениеРаспознавания = Неопределено;
	Если КодСостояния = КодСостояния_202() Тогда
		// Еще распознается.
	ИначеЕсли КодСостояния = КодСостояния_200_ОК() Тогда
		Попытка
			Результат.ИдентификаторРезультата = 
				РезультатКоманды.ОтветСервиса.ДесериализованноеЗначение["result"]["documents"][0]["id"];
				
				НачалоРаспознавания = РезультатКоманды.ОтветСервиса.ДесериализованноеЗначение["start_time"];
				ЗавершениеРаспознавания = РезультатКоманды.ОтветСервиса.ДесериализованноеЗначение["end_time"];
		Исключение
			ТекстИсключения = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
		КонецПопытки;
	КонецЕсли;
	
	СведенияДляПротокола = СтруктураСведенийДляПротокола();
	СведенияДляПротокола.Группа = ГруппаЗапроса;
	СведенияДляПротокола.Запрос = Перечисления.ЗапросыКСервисуРаспознавания.ПроверкаГотовностиЗаданияРаспознавания;
	СведенияДляПротокола.КодСостояния = КодСостояния;
	
	СведенияДляПротокола.ОписаниеОшибки = Результат.ОписаниеОшибки;
	Если ЗначениеЗаполнено(ТекстИсключения) Тогда
		СведенияДляПротокола.ОписаниеОшибки = СведенияДляПротокола.ОписаниеОшибки
			+ Символы.ПС + Символы.ПС + ТекстИсключения;
	КонецЕсли;
	
	СведенияДляПротокола.ДополнительныеСведения = 
		НСтр("ru = 'Идентификатор задания: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ ИдентификаторЗадания
		+ Символы.ПС
			+ НСтр("ru = 'Задание завершено: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ ЗначениеЗаполнено(Результат.ИдентификаторРезультата)
		+ Символы.ПС
			+ НСтр("ru = 'Идентификатор получения результата: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ Результат.ИдентификаторРезультата
		+ Символы.ПС
			+ НСтр("ru = 'Начало распознавания: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ ?(ТипЗнч(НачалоРаспознавания) = Тип("Строка"), НачалоРаспознавания, "")
		+ Символы.ПС
			+ НСтр("ru = 'Завершение распознавания: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ ?(ТипЗнч(ЗавершениеРаспознавания) = Тип("Строка"), ЗавершениеРаспознавания, "");
	
	ЗаписатьСведенияВПротокол(СведенияДляПротокола);
	
	Если ЗначениеЗаполнено(ТекстИсключения) Тогда
		ВызватьИсключение ТекстИсключения;
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции


// Возвращает результат распознавания по указанном идентификатору.
//
// Параметры:
//  ИдентификаторЗадания - Строка - идентификатор задания распознавания в сервисе.
//  ИдентификаторРезультата - Строка - идентификатор результата распознавания в сервисе.
//  ГруппаЗапроса - Строка - группа запросов, в рамках которой выполняется получение результата.
//                           Используется для группировки записей в протоколе работы с сервисом.
//
// Возвращаемое значение:
//  Структура
//   * СтрокаВозврата - Строка - принимает значения ФайлРаспознан, ФайлНеРаспознан, Ошибка
//   * РаспознанныйТекст - Массив - тексты распознанных страниц.
//                         Каждый элемент массива является распознанной страницей.
//   * ОписаниеСтрокиВозврата - Строка - содержит описание строки возврата.
//
Функция РезультатРаспознавания(ИдентификаторЗадания, ИдентификаторРезультата, ГруппаЗапроса)
	
	Результат = Новый Структура;
	Результат.Вставить("СтрокаВозврата", "ФайлРаспознан");
	Результат.Вставить("РаспознанныйТекст", Новый Массив);
	Результат.Вставить("ОписаниеСтрокиВозврата", "");
	
	КомандаСервиса = НоваяКомандаСервиса();
	КомандаСервиса.URLЗапроса = БазовыйURL()
		+ "/ocr/models/" + НомерМодели() + "/result/" + ИдентификаторРезультата;
	РезультатКоманды = ВыполнитьКомандуСервиса(КомандаСервиса);
	
	КодСостояния = 0;
	ТекстИсключения = "";
	Если РезультатКоманды.ОтветСервиса = Неопределено Тогда
		Результат.СтрокаВозврата = "Ошибка";
		Результат.ОписаниеСтрокиВозврата = РезультатКоманды.ОписаниеОшибки;
	Иначе
		
		КодСостояния = РезультатКоманды.ОтветСервиса.КодСостояния;
		
		Если КодСостояния = КодСостояния_200_ОК() Тогда
			Результат.СтрокаВозврата = "ФайлРаспознан";
			Попытка
				Результат.РаспознанныйТекст = РезультатКоманды.ОтветСервиса.ДесериализованноеЗначение["result"];
			Исключение
				ТекстИсключения = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
			КонецПопытки;
		ИначеЕсли КодСостояния = КодСостояния_400_BadRequest() Тогда
			Результат.СтрокаВозврата = "ФайлНеРаспознан";
			Результат.ОписаниеСтрокиВозврата = 
				НСтр("ru = 'Не удалось распознать файл (код состояния: 400).
				|Возможно файл поврежден или имеет не поддерживаемый формат.
				|Допустимые форматы: bmp, jpg, jpeg, gif, tif, tiff, pdf.'",
				ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка());
		Иначе
			
			Результат.СтрокаВозврата = "Ошибка";
			
			ОписаниеСтандартнойОшибки = ОписаниеКодаОстановкиРаспознаванияВСервисе(КодСостояния);
			Если ЗначениеЗаполнено(ОписаниеСтандартнойОшибки) Тогда
				Результат.ОписаниеСтрокиВозврата = ОписаниеСтандартнойОшибки;
			Иначе
				Результат.ОписаниеСтрокиВозврата = 
					СтрШаблон(НСтр("ru = 'Не удалось получить результат распознавания.
					|Код состояния сервиса распознавания: %1'", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка()),
					РезультатКоманды.ОтветСервиса.КодСостояния);
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЕсли;
	
	СведенияДляПротокола = СтруктураСведенийДляПротокола();
	СведенияДляПротокола.Группа = ГруппаЗапроса;
	СведенияДляПротокола.Запрос = Перечисления.ЗапросыКСервисуРаспознавания.ПолучениеРезультатаРаспознавания;
	СведенияДляПротокола.КодСостояния = КодСостояния;
	Если Результат.СтрокаВозврата = "Ошибка" Тогда
		СведенияДляПротокола.ОписаниеОшибки = Результат.ОписаниеСтрокиВозврата;
	КонецЕсли;
	Если ЗначениеЗаполнено(ТекстИсключения) Тогда
		СведенияДляПротокола.ОписаниеОшибки = СведенияДляПротокола.ОписаниеОшибки
			+ Символы.ПС + Символы.ПС + ТекстИсключения;
	КонецЕсли;
	
	СведенияДляПротокола.ДополнительныеСведения = 
		НСтр("ru = 'Идентификатор задания: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ ИдентификаторЗадания
		+ Символы.ПС
			+ НСтр("ru = 'Идентификатор получения результата: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ ИдентификаторРезультата;
	
	Если Результат.СтрокаВозврата = "ФайлРаспознан" Тогда
		
		ЕстьРаспознанныйТекст = Ложь;
		Для Каждого РаспознанныйТекст Из Результат.РаспознанныйТекст Цикл
			ЕстьРаспознанныйТекст = ЗначениеЗаполнено(РаспознанныйТекст);
			Если ЕстьРаспознанныйТекст Тогда
				Прервать;
			КонецЕсли;
		КонецЦикла;
		
		СведенияДляПротокола.ДополнительныеСведения = СведенияДляПротокола.ДополнительныеСведения
			+ Символы.ПС
				+ НСтр("ru = 'Файл распознан.'", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
			+ Символы.ПС
				+ НСтр("ru = 'Есть распознанный текст: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
				+ ЕстьРаспознанныйТекст;
	КонецЕсли;
	
	Если Результат.СтрокаВозврата = "ФайлНеРаспознан" Тогда
		СведенияДляПротокола.ДополнительныеСведения = СведенияДляПротокола.ДополнительныеСведения
			+ Символы.ПС
			+ НСтр("ru = 'Файл не распознан'", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка());
	КонецЕсли;
	
	ЗаписатьСведенияВПротокол(СведенияДляПротокола);
	
	Если ЗначениеЗаполнено(ТекстИсключения) Тогда
		ВызватьИсключение ТекстИсключения;
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

