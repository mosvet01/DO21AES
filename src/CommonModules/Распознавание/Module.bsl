//   * КодСостояния - Число
//   * ОписаниеОшибки - Строка
//   * ДополнительныеСведения - Строка
//
Функция СтруктураСведенийДляПротокола()
	
	СтруктураОтвета = Новый Структура;
	СтруктураОтвета.Вставить("Группа", "");
	СтруктураОтвета.Вставить("Запрос", Перечисления.ЗапросыКСервисуРаспознавания.ПустаяСсылка());
	СтруктураОтвета.Вставить("КодСостояния", 0);
	СтруктураОтвета.Вставить("ОписаниеОшибки", "");
	СтруктураОтвета.Вставить("ДополнительныеСведения", "");
	
	Возврат СтруктураОтвета;
	
КонецФункции

// Записывает сведения в протокол работы с сервисом.
//
// Параметры:
//  СтруктураСведений - Структура - см. СтруктураСведенийДляПротокола
//
Процедура ЗаписатьСведенияВПротокол(СтруктураСведений)
	
	ОтветСервиса = Новый Массив;
	
	ОтветСервиса.Добавить(НСтр("ru = 'Код состояния: '"));
	ОтветСервиса.Добавить(СтруктураСведений.КодСостояния);
	
	Если ЗначениеЗаполнено(СтруктураСведений.ОписаниеОшибки) Тогда
		ОтветСервиса.Добавить(Символы.ПС);
		ОтветСервиса.Добавить(Символы.ПС);
		ОтветСервиса.Добавить(НСтр("ru = 'Ошибка: '"));
		ОтветСервиса.Добавить(Символы.ПС);
		ОтветСервиса.Добавить(СтруктураСведений.ОписаниеОшибки);
	КонецЕсли;
	
	Если ЗначениеЗаполнено(СтруктураСведений.ДополнительныеСведения) Тогда
		ОтветСервиса.Добавить(Символы.ПС);
