// Возвращает количество страниц, которые можно распознать под текущей учетной записью ИТС.
//
// Возвращаемое значение:
//  Число
//
Функция ЛимитСтраницРаспознавания() Экспорт
	
	УстановитьПривилегированныйРежим(Истина);
	
	Результат = Новый Структура;
	Результат.Вставить("ЛимитСтраниц", 0);
	Результат.Вставить("ОписаниеОшибки", "");
	
	КомандаСервису = НоваяКомандаСервиса();
	КомандаСервису.URLЗапроса = БазовыйURL() + "/users/limits";
	РезультатКоманды = ВыполнитьКомандуСервиса(КомандаСервису);
	
	КодСостояния = 0;
	ТекстИсключения = "";
	Если РезультатКоманды.ОтветСервиса = Неопределено Тогда
		Результат.ОписаниеОшибки = РезультатКоманды.ОписаниеОшибки;
	Иначе
		КодСостояния = РезультатКоманды.ОтветСервиса.КодСостояния;
		
		ОписаниеСтандартнойОшибки = ОписаниеКодаОстановкиРаспознаванияВСервисе(
			РезультатКоманды.ОтветСервиса.КодСостояния);
		
		Если ЗначениеЗаполнено(ОписаниеСтандартнойОшибки) Тогда
			Результат.ОписаниеОшибки = ОписаниеСтандартнойОшибки;
		ИначеЕсли РезультатКоманды.ОтветСервиса.КодСостояния = КодСостояния_200_ОК() Тогда
			Попытка
				Результат.ЛимитСтраниц = РезультатКоманды.ОтветСервиса.ДесериализованноеЗначение["plain_text_pages"];
			Исключение
				ТекстИсключения = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
			КонецПопытки;
		Иначе
			Результат.ОписаниеОшибки = 
				СтрШаблон(НСтр("ru = 'Не удалось получить лимит страниц распознавания.
					|Код состояния сервиса распознавания: %1'", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка()),
				РезультатКоманды.ОтветСервиса.КодСостояния);
		КонецЕсли;
		
	КонецЕсли;
	
	СведенияДляПротокола = СтруктураСведенийДляПротокола();
	СведенияДляПротокола.КодСостояния = РезультатКоманды.ОтветСервиса.КодСостояния;
	СведенияДляПротокола.Запрос = Перечисления.ЗапросыКСервисуРаспознавания.ПолучениеЛимитаСтраниц;
	
	СведенияДляПротокола.ОписаниеОшибки = Результат.ОписаниеОшибки;
	Если ЗначениеЗаполнено(ТекстИсключения) Тогда
		СведенияДляПротокола.ОписаниеОшибки = СведенияДляПротокола.ОписаниеОшибки
			+ Символы.ПС + Символы.ПС + ТекстИсключения;
	КонецЕсли;
	
	СведенияДляПротокола.ДополнительныеСведения = 
		НСтр("ru = 'Лимит страниц: '", ОбщегоНазначенияКлиентСервер.КодОсновногоЯзыка())
		+ Результат.ЛимитСтраниц;
	ЗаписатьСведенияВПротокол(СведенияДляПротокола);
	
	Если ЗначениеЗаполнено(ТекстИсключения) Тогда
		ВызватьИсключение ТекстИсключения;
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

