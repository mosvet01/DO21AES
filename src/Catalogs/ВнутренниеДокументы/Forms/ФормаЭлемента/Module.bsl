	// ЭДО
	Если ИмяСобытия = "ОбновитьСостояниеЭД" Тогда
		ОбновитьОтображениеПоЭДО();
	КонецЕсли;
	
	Если ИмяСобытия = "ОбновленоСостояниеЭДДО"
		И Параметр.Свойство("Документы")
		И Параметр.Документы.Найти(Объект.Ссылка) <> Неопределено Тогда
		
		ОбновитьОтображениеПоЭДО();
	КонецЕсли;
	
