		СостояниеПоЭДО = ПредопределенноеЗначение("Перечисление.СостоянияЭДОДокументооборот.НеСформирован")
		Или (ДоступнаКорректировкаЭД
			И (СостояниеПоЭДО = ПредопределенноеЗначение("Перечисление.СостоянияЭДОДокументооборот.ОтклоненПолучателем")
				Или СостояниеПоЭДО = ПредопределенноеЗначение("Перечисление.СостоянияЭДОДокументооборот.ТребуетсяУточнение")));
	
	ТекущиеДанные = Элементы.Стороны.ТекущиеДанные;
	Если ТекущиеДанные.Подписан И ЕстьЭДО И МожноКорректироватьПодписан Тогда
		Если ТекущиеДанные.НомерСтроки = 1 Тогда
			Отказ = Истина;
			ОбменСКонтрагентамиДОСлужебныйКлиент.ЗадатьВопросОПодготовкеДокументамККорректировке(ЭтаФорма);
		ИначеЕсли ТекущиеДанные.НомерСтроки = 2 И Не НаправлениеИсходящий Тогда
			Отказ = Истина;
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
					НСтр("ru = 'Документ пришел по ЭДО! Нельзя изменять признак подписанности стороны отправителя'"));
			Возврат;
		КонецЕсли;
	КонецЕсли;
	
