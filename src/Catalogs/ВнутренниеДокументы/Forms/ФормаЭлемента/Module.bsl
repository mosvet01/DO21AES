&НаКлиенте
Процедура ПодписатьДокумент(ПодписьПоЭДО = Ложь, ДоступныеСертификаты = Неопределено)
	
	Если ЕстьЗашифрованныеИлиЗанятыеФайлы Тогда
		ТекстПредупреждения = НСтр("ru = 'Нельзя подписать документ с зашифрованными или занятыми файлами.'");
		ПоказатьПредупреждение(, ТекстПредупреждения);
		Возврат;
	КонецЕсли;
	
	КолвоФайлов = 0;
	Если Объект.Ссылка.Пустая() Тогда
		КолвоФайлов = ФайлыДобавленные.Количество();
	Иначе
		Для Каждого СтрФайлы Из Файлы Цикл
			Если СтрФайлы.ПометкаУдаления = Ложь Тогда
				КолвоФайлов = КолвоФайлов + 1;
			КонецЕсли;		
		КонецЦикла;	
	КонецЕсли;	
	
	Если ЕстьЭДО И КолвоФайлов = 0 Тогда
		ТекстПредупреждения = НСтр("ru = 'По ЭДО не может быть отправлен документ без файлов. 
		|Добавьте файл.'");
		ПоказатьПредупреждение(, ТекстПредупреждения);
		Возврат;
	КонецЕсли;		
	
	Если ЕстьЭДО И КолвоФайлов > 1 Тогда
		ТекстПредупреждения = НСтр("ru = 'По ЭДО может быть отправлен документ имеющий только один файл. Удалите лишние файлы.'");
		ПоказатьПредупреждение(, ТекстПредупреждения);
		Возврат;
	КонецЕсли;		
	
	ПараметрыОповещения = Новый Структура;
	ПараметрыОповещения.Вставить("ПодписатьЭД", ПодписьПоЭДО);
	ПараметрыОповещения.Вставить("ДоступныеСертификаты", ДоступныеСертификаты);
	
	ОписаниеОповещения = Новый ОписаниеОповещения(
		"ПодписатьДокументПродолжение", ЭтотОбъект, ПараметрыОповещения);
	
	Если Объект.Ссылка.Пустая() Или Модифицированность Тогда  
		
		ТекстВопроса = ТекстВопросаНезаписанныхДанных(НСтр("ru = 'Подписать'"));
		ПоказатьВопрос(ОписаниеОповещения, ТекстВопроса, РежимДиалогаВопрос.ОКОтмена);
		
	Иначе
		
		ВыполнитьОбработкуОповещения(ОписаниеОповещения, КодВозвратаДиалога.ОК);
		
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ПодписатьДокументПродолжение(Результат, Параметры) Экспорт
	
	Если Результат = КодВозвратаДиалога.Отмена Тогда 
		
		Возврат;
		
	ИначеЕсли Результат = КодВозвратаДиалога.ОК Тогда
		
		Если Не Записать() Тогда 
			Возврат;
		КонецЕсли;
		
		ПоказатьОповещениеПользователя(
			НСтр("ru = 'Создание:'"), 
			ПолучитьНавигационнуюСсылку(Объект.Ссылка),
			Строка(Объект.Ссылка),
			БиблиотекаКартинок.Информация32);
		
	КонецЕсли;
	
	ПараметрыОбработчика = Новый Структура;
	ПараметрыОбработчика.Вставить("Объект", Объект.Ссылка);
	Если Параметры.Свойство("ПодписатьЭД") И Параметры.ПодписатьЭД Тогда
		ПараметрыОбработчика.Вставить("ПодписатьЭД", Параметры.ПодписатьЭД);
		ПараметрыОбработчика.Вставить("НаправлениеЭД", 
			ПредопределенноеЗначение("Перечисление.НаправленияЭДО.Входящий"));
	КонецЕсли;
	ОбработчикЗавершения = Новый ОписаниеОповещения("ПодписатьДокументЗавершение", ЭтотОбъект, ПараметрыОбработчика);
	
	Если Параметры.Свойство("ПодписатьЭД") И Параметры.ПодписатьЭД Тогда
		ДанныеДляПодписания = Новый Структура;
		ДанныеДляПодписания.Вставить("ОбъектПодписания", Объект.Ссылка);
		
		ДанныеПодписанта = Новый Структура;
		ДанныеПодписанта.Вставить("Подписал", ПользователиКлиентСервер.ТекущийПользователь());
		ДанныеПодписанта.Вставить("ДатаПодписи", ТекущаяДата());
		ДанныеПодписанта.Вставить("Подписан", Истина);
		
		ДанныеДляПодписания.Вставить("ПараметрыДанных",
			Новый Структура("ДанныеПодписанта", ДанныеПодписанта));
	Иначе
		ДанныеДляПодписания = Объект.Ссылка;
	КонецЕсли;
	
	ДоступныеСертификаты = Неопределено;
	Параметры.Свойство("ДоступныеСертификаты", ДоступныеСертификаты);
	
	ПараметрыПодписания = РаботаСЭПКлиент.НовыеПараметрыПодписания();
	ПараметрыПодписания.ИдентификаторФормы = УникальныйИдентификатор;
	ПараметрыПодписания.ДоступныеСертификаты = ДоступныеСертификаты;
	ПараметрыПодписания.ОбработчикЗавершения = ОбработчикЗавершения;
	
	РаботаСЭПКлиент.Подписать(ДанныеДляПодписания, ПараметрыПодписания);
	
КонецПроцедуры

