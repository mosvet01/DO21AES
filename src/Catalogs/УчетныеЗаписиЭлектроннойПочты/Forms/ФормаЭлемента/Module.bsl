Процедура ВыполнитьHTTPСоединение(СтрокаCode)
	
	ДействуетДо = ТекущаяДатаСеанса();
	refresh_token = "";
	
	Если РаботаСПочтовымиСообщениямиПереопределяемый.ПолучитьТокенAuth(
			ТокенДоступа, ДействуетДо, refresh_token,
			Объект.СерверИсходящейПочты,
			СтрокаCode, 
			OAuthАвторизацияКлиент,
			OAuthАвторизацияКлиентСекретныйКод,
			OAuth_redirection_uri) Тогда
		
		ЗаписатьПараметрыТокена(refresh_token, ДействуетДо);
		Возврат;
		
	КонецЕсли;	
	
	СоединениеSSL = Новый ЗащищенноеСоединениеOpenSSL();
	
	ДатаНачала = ТекущаяДатаСеанса();
	
	АдресСайта = "";
	АдресРесурса = "";
	
	Если СтрНайти(НРег(Объект.СерверВходящейПочты), "yandex.ru") <> 0 Тогда
		АдресСайта = "oauth.yandex.ru";
		АдресРесурса = "token";
	ИначеЕсли СтрНайти(НРег(Объект.СерверВходящейПочты), "mail.ru") <> 0 Тогда
		АдресСайта = "oauth.mail.ru";
		АдресРесурса = "token";
	ИначеЕсли СтрНайти(НРег(Объект.СерверВходящейПочты), "gmail.com") <> 0 Тогда
		АдресСайта = "oauth2.googleapis.com";
		АдресРесурса = "token";
		
	ИначеЕсли СтрНайти(НРег(Объект.СерверВходящейПочты), "office365.com") <> 0 Тогда
		АдресСайта = "login.microsoftonline.com";
		АдресРесурса = "common/oauth2/v2.0/token";
		// tenant = common
		
	Иначе
		ВызватьИсключение НСтр("ru = 'Работа с OAuth с данным email сервером не поддерживается.'");
	КонецЕсли;	
	
	Соединение = Новый HTTPСоединение(
		АдресСайта,
		443, // порт
		,,
		,,
		СоединениеSSL); 
		
	Заголовки = Новый Соответствие;	
	
	Заголовки.Вставить("Content-Type", "application/x-www-form-urlencoded");
	
	КодированныйАдресПерехода = КодироватьСтроку(OAuth_redirection_uri, СпособКодированияСтроки.КодировкаURL);
	
	СтрокаЗапроса = СтрШаблон(
		"grant_type=authorization_code&code=%1&client_id=%2&client_secret=%3&redirect_uri=%4",
		СтрокаCode, 
		OAuthАвторизацияКлиент,
		OAuthАвторизацияКлиентСекретныйКод,
		КодированныйАдресПерехода
	);
	
	Если СтрНайти(НРег(Объект.СерверВходящейПочты), "office365.com") <> 0 Тогда
		
		СтрокаЗапроса = СтрШаблон(
			"grant_type=authorization_code&code=%1&client_id=%2&client_secret=%3&redirect_uri=%4&scope=%5",
			СтрокаCode, 
			OAuthАвторизацияКлиент,
			OAuthАвторизацияКлиентСекретныйКод,
			КодированныйАдресПерехода,
			"openid%20offline_access%20https%3A%2F%2Foutlook.office.com%2FIMAP.AccessAsUser.All%20https%3A%2F%2Foutlook.office.com%2FSMTP.Send"
		);
		
	КонецЕсли;	
	
	HTTPЗапрос = Новый HTTPЗапрос(АдресРесурса, Заголовки);
	
	HTTPЗапрос.УстановитьТелоИзСтроки(СтрокаЗапроса);
	
	Ответ = "";
	HTTPОтвет = Соединение.ОтправитьДляОбработки(HTTPЗапрос);
	СтрОтвета = HTTPОтвет.ПолучитьТелоКакСтроку();
	
	// СтрОтвета =  такой вид:
	//  {"access_token": "AgAAAAABNPytAAZS7BuYrLZ-aUjDivVBmmGKMjU", 
	//   "expires_in": 29106149, 
	//  "refresh_token": "1:h06dkWhsEz7bKhpL:IST-ZfOLDlq_iQnqY2dIzCJyY4lpaYXYHZXfD-0MmMIlYiQoayDB:bKe1p79tHXmvnBbLlApo-g", 
	//   "token_type": "bearer"}
	
	ЗначенияОтвета = Новый Соответствие;
	
	Чтение = Новый ЧтениеJSON;
	Чтение.УстановитьСтроку(СтрОтвета);
	
	ТекИмя = "";
	Пока Чтение.Прочитать() Цикл
		Если Чтение.ТипТекущегоЗначения = ТипЗначенияJSON.ИмяСвойства Тогда
			ТекИмя = Чтение.ТекущееЗначение;
		Иначе
			
			Если ТекИмя <> "" И
				Чтение.ТипТекущегоЗначения <> ТипЗначенияJSON.НачалоМассива Тогда
				ЗначенияОтвета[ТекИмя] = Чтение.ТекущееЗначение;
				ТекИмя = "";
			КонецЕсли;	
			
		КонецЕсли;	
	КонецЦикла;	
	
	Если ЗначенияОтвета.Получить("error") <> Неопределено Тогда
		
		СтрИсключения = НСтр("ru = 'Ошибка получения токена: '") + ЗначенияОтвета["error"];
		Если ЗначенияОтвета.Получить("error_description") <> Неопределено Тогда
			СтрИсключения = СтрИсключения + Символы.ПС + ЗначенияОтвета["error_description"]; 
		КонецЕсли;	
			
		ВызватьИсключение СтрИсключения;
		
	КонецЕсли;	
	
	ТокенДоступа = ЗначенияОтвета["access_token"];
	ДействуетДо = ДатаНачала + ЗначенияОтвета["expires_in"];
	refresh_token = ЗначенияОтвета["refresh_token"];
	
	ЗаписатьПараметрыТокена(refresh_token, ДействуетДо);
	
КонецПроцедуры

